<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="matt.media.player.SettingsController">
   <children>
      <VBox spacing="5.0">
         <children>
            <Label text="Media Location">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="musicDirectory" editable="false" prefHeight="25.0" prefWidth="284.0" />
                  <Button mnemonicParsing="false" onAction="#changeMediaDir" prefHeight="25.0" prefWidth="78.0" text="Change" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#resetCache" text="Reset Cache" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
